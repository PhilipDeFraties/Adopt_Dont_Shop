<h1>All Pets</h1>

  <% @shelter.pets.each do |pet| %>
    <h2><%= image_tag(pet.image_path, :size => "200x100")%></h2>
    <h2>Name: <%= pet.name %></h2>
    <h2>Approximate age: <%= pet.approx_age %></h2>
    <h2>Sex: <%= pet.sex %></h2>
    <h2>Shelter ID: <%= pet.shelter_id %></h2><br>
    <h2>Description: <%= pet.description %></h2><br>
  <% end %>

  <a href= <%= "/shelters/#{@shelter.id}/pets/new" %>>Create Pet</a>
